<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white3">

   <include android:id="@+id/item_header"
       layout="@layout/item_header"></include>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        />
        <EditText
            android:id="@+id/edit_newPassword"
            android:layout_width="match_parent"
            android:layout_height="38dip"
            android:hint="请输入密码"
            android:layout_marginTop="67dip"
            android:layout_alignParentRight="true"
            android:background="@anim/edit_text"/>
        <Button
            android:id="@+id/confirm_newPassword"
            android:layout_width="match_parent"
            android:layout_height="40.0dip"
            android:layout_marginTop="330dip"
            android:text="确认"
            android:background="@color/blue"/>
    </RelativeLayout>
</LinearLayout>
