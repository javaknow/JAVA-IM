<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:gravity="center_vertical"
        android:background="@drawable/skinpic_blue">

        <ImageButton
            android:id="@+id/title_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/title_btn_l_selector"
            android:padding="0.0dip"
            android:src="@drawable/title_btn_back"/>

        <TextView
            android:id="@+id/ivTitleName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/white"
            android:text="个人基本信息"
            android:textSize="23.0dip"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/finsh_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/title_btn_r_selector"
            android:gravity="center"
            android:textSize="16.0sp"
            android:textColor="@color/white"
            android:visibility="invisible"/>
        </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0.0px"
        android:layout_weight="1"
        android:scrollbarThumbVertical="@drawable/scrollbar_handle_vertical"
        android:background="@color/p_bg"
        android:scrollbars="none">

        <LinearLayout android:orientation="vertical"
            android:paddingBottom="12.0dip"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:isScrollContainer="true">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/friend_info_sign"
            android:orientation="horizontal"
            android:paddingBottom="10.0dip"
            android:paddingTop="10.0dip">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/face"
                    android:layout_width="70.0dip"
                    android:layout_height="70.0dip"
                    android:layout_centerVertical="true"
                    android:layout_gravity="top"
                    android:layout_marginLeft="6.0dip"
                    android:background="@drawable/face_bg"
                    android:gravity="center"
                    android:padding="2.0dip"
                    android:src="@drawable/h001"
                    />
                </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="12.0dip"
                android:orientation="vertical">
       <LinearLayout
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">

                <TextView
                    android:id="@+id/introduction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:text="个性签名"
                    android:textColor="@color/black"
                    android:textSize="20.0dip"/>
       </LinearLayout>

            <TextView
                android:id="@+id/textintroduction"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:maxLines="5"
                android:text="我来自吉林大学珠海学院"
                android:textSize="14.0sp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray1"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/user_info_detail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6.0dip"
            android:layout_marginRight="6.0dip"
            android:background="@drawable/leba_shape_bg"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/change_comment"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"
                    android:text="用户姓名"
                    android:textColor="@color/gray1"
                    android:textSize="18.0sp"
                    android:paddingLeft="5.0dip"/>

                <TextView
                    android:id="@+id/EnterpriseContactDlm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.0dip"
                    android:textColor="@color/black"
                    android:textSize="18.0sp"
                    android:text="张三"/>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="@drawable/shape_line"></View>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5.0dip"
                    android:text="用户名"
                    android:textColor="@color/gray1"
                    android:textSize="18.0sp" />

                <TextView
                    android:id="@+id/EnterpriseContactDlm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.0dip"
                    android:textColor="@color/black"
                    android:textSize="18.0sp"
                    android:text="zhangs"/>
                <EditText
                    android:id="@+id/comment"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.0dip"
                    android:layout_weight="1.0"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="18.0sp"
                    android:text="张三"
                    android:visibility="gone"/>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="@drawable/shape_line"></View>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"
                    android:text="所属学校"
                    android:textColor="@color/gray1"
                    android:textSize="18.0sp"/>

                <TextView
                    android:id="@+id/EnterpriseContactDepartMent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.0dip"
                    android:textColor="@color/black"
                    android:textSize="18.0sp"
                    android:text="吉林大学珠海学院"/>
                <EditText
                    android:id="@+id/comment1"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="18.0sp"
                    android:text="张三"
                    android:visibility="gone"/>
                </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="@drawable/shape_line" />

    <LinearLayout
        android:id="@+id/change_comment1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:paddingLeft="5.0dip"
            android:text="手机号"
            android:textColor="@color/gray1"
            android:textSize="18.0sp"/>

        <TextView
            android:id="@+id/EnterpriseContactMobile"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5.0dip"
            android:layout_weight="1.0"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="18.0sp"
            android:text="1523112344"/>

        <EditText
            android:id="@+id/comment2"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5.0dip"
            android:layout_weight="1.0"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/blue"
            android:textSize="18.0sp"
            android:text="张三"
            android:visibility="gone"/>
        </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="@drawable/shape_line" />

        <LinearLayout
            android:id="@+id/change_comment2"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="100dip"
                android:layout_height="wrap_content"
                android:paddingLeft="5.0dip"
                android:text="邮箱"
                android:textColor="@color/gray1"
                android:textSize="18.0sp" />

            <TextView
                android:id="@+id/EnterpriseContactEmail"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:layout_weight="1.0"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="18.0sp"
                android:text="simgsg@qq.com"/>

            <EditText
                android:id="@+id/comment3"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:layout_weight="1.0"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="18.0sp"
                android:text="张三"
                android:visibility="gone"/>
            </LinearLayout>
           </LinearLayout>
        </LinearLayout>
        </ScrollView>
</LinearLayout>
